<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_marginVertical="30dp"
        android:text="@string/match_activity_lbl1"
        android:textAlignment="center"
        android:textColor="#286BA6"
        android:textSize="20dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/txtMatchAlias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="50dp"
        android:ems="10"
        android:hint="@string/match_activity_hint"
        android:inputType="text"
        android:textAlignment="center"
        android:textColorHint="#BDBDCC" />

    <Button
        android:id="@+id/btnMatch"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:background="#78ABF8"
        android:text="@string/match_activity_btn"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:textStyle="bold" />


</LinearLayout>